from circulo import Circulo

# Ejercicio 6: Instanciar la clase Circulo 3 veces
cir1 = Circulo(5)
cir2 = Circulo(10)
cir3 = Circulo(7)

# Ejercicio 7: Imprimir diámetro de cada círculo
print("\nDiámetros de los círculos:")
print(cir1.diametro())
print(cir2.diametro())
print(cir3.diametro())

# Ejercicio 8: Imprimir PI de cada instancia
print("\nValor de PI en cada círculo:")
print(cir1.PI)
print(cir2.PI)
print(cir3.PI)

# Ejercicio 9: Crear 2 círculos con radios idénticos y comparar con ==
cir4 = Circulo(12)
cir5 = Circulo(12)
print("\n¿Los círculos con radio 12 son iguales?:", cir4 == cir5)

# Ejercicio 10: Comparar perímetros de cir4 y cir5
print("¿El perímetro de ambos círculos es igual?:", cir4.perimetro() == cir5.perimetro())
